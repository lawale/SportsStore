@model  Cart

<div class="">
    @if(Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @{
                var qty = Model.Lines.Sum(x => x.Quantity);
                var cartString = (qty == 1) ? $"{qty} item" : $"{qty} items";
            }
            @cartString
            @Model.ComputeTotalValues().ToString("C")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn"
       asp-controller="Cart" asp-action="Index" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>