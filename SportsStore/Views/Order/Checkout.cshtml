@model Order


<h2>Check out now </h2>
@{ 
    var outputString = "Please enter your details, and we'll ship your goods right away!";
}
<p>@outputString</p>
<form asp-action="Checkout" method="post">
    <div asp-validation-summary="All" class="alert-danger alert-info"></div>
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label asp-for="Line1">Line 1:</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Line2">Line 2:</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div asp-validation-summary="None" class="form-group">
        <label asp-for="Line3">Line 3:</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Gift wrap these items
        </label>
    </div>
    <div class="text-center shadow">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
